
@model SiteFamilia.Models.Mae
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/cadastro.css" />
</head>
<body>

    <div class="container">

        <form method="post" class="Cadastro">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="row">
                <div class="col">
                    <input type="text" name="Nome" class="form-control" id="nome" value="@Model.Nome" placeholder="Nome">
                    @Html.ValidationMessage("nome")
                </div>
                <div class="col">
                    <input type="text" name="Sobrenome" class="form-control" id="sobrenome" value="@Model.Sobrenome" placeholder="Sobrenome">
                    @Html.ValidationMessage("sobrenome")
                </div>
            </div>
            <div class="row">
                <div class="cpf">
                    <label for="cpf">CPF</label>
                    <input type="text" name="cpf" class="form-control" id="cpf" value="@Model.Cpf">
                    @Html.ValidationMessage("nascimento")
                </div>
                <div class="alt">
                    <label for="altura">Altura</label>
                    <input type="text" name="altura" class="form-control" id="altura" value="@Model.Altura" placeholder="Altura">
                    @Html.ValidationMessage("altura")
                </div>
                <div class="nasc">
                    <label for="nascimento">Data de Nascimento</label>
                    <input type="date" name="nascimento" value="@Model.Nascimento" class="form-control" id="nascimento">
                    @Html.ValidationMessage("nascimento")
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="civil" id="civil" value="Solteira" checked>
                <label class="form-check-label" for="civil">
                    Solteira
                </label>
                <input class="form-check-input" type="radio" name="civil" id="civil" value="Casada">
                <label class="form-check-label" for="civil"></label>
                    Casada
            </div>
            <div class="form-group">
                <label for="email">Endereço de email</label>
                <input type="email" name="email" class="form-control" id="email" value="@Model.Email" aria-describedby="emailHelp" placeholder="Seu email">
                @Html.ValidationMessage("email")

            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" name="senha" class="form-control" id="senha" placeholder="Senha">
                <label for="senha">Confirme a Senha</label>
                <input type="password" name="senha" class="form-control" id="senha" placeholder="Senha">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
            <footer>Family Book &copy;@DateTime.Now.Year</footer>
        </form>

    </div>
</body>
</html>
